package test;

import java.util.Scanner;

public class Q1 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        // Prompt the user to enter three cities
        System.out.println("Enter the names of three cities, each on a separate line:");
        String city1 = input.nextLine();
        String city2 = input.nextLine();
        String city3 = input.nextLine();

        // Sort the cities in alphabetical order
        if (city1.compareTo(city2) < 0) {
            if (city2.compareTo(city3) < 0) {
                System.out.println("The cities in alphabetical order are " + city1 + ", " + city2 + ", and " + city3 + ".");
            } else if (city1.compareTo(city3) < 0) {
                System.out.println("The cities in alphabetical order are " + city1 + ", " + city3 + ", and " + city2 + ".");
            } else {
                System.out.println("The cities in alphabetical order are " + city3 + ", " + city1 + ", and " + city2 + ".");
            }
        }
    }
}
